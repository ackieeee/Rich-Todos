{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
